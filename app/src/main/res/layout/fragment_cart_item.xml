<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/cr26white"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_cart_item_product"
                app:shapeAppearanceOverlay="@style/circular"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:src="@color/image_placeholder"
                android:scaleType="fitXY"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/text_cart_item_name"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAppearance="@style/textBodyBold"
                        android:text="3 мяса"
                        />
                <ImageView
                        android:id="@+id/image_cart_item_delete"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_delete"
                        android:scaleType="fitXY"
                        />
            </LinearLayout>
            <TextView
                    android:id="@+id/text_cart_item_description"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="@style/textBodySmall"
                    android:text="Ветчина, охотничьи колбаски, бекон, сыр моцарелла, фирменный томатный соус" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/text_cart_item_price"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAppearance="@style/textHeadlineMedium"
                android:textColor="@color/secondary"
                android:text="299 руб."
                />
        <io.github.krezerenko.sem4_pizzeria.cart.ButtonModifyCount
                android:id="@+id/button_modify_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:paddingHorizontal="18dp"/>
    </LinearLayout>
</LinearLayout>