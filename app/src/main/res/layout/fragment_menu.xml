<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rfyqflmz1u5k"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".MenuFragment">

    <LinearLayout
            android:id="@+id/r5wc1u38q895"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingVertical="4dp"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/r06ptbdb4iwjx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/cr20bffffff"
                android:paddingHorizontal="4dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/r3a6b5iqmrr"
                    app:shapeAppearanceOverlay="@style/cr20"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />

            <TextView
                    android:id="@+id/r0yt3468kojbj"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Поиск по названию..." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rpj38l6b12g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingVertical="6dp"
            android:paddingLeft="18dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/rzuc3e508non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/s868686sw1cr20"
                android:paddingVertical="11dp"
                android:paddingHorizontal="43dp"
                android:layout_marginEnd="13dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/rnxpi5r2md5"
                    android:textColor="@color/gray"
                    android:textAppearance="@style/textBodyMedium"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Избранное" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/rqtsmpoezheo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/s868686sw1cr20"
                android:paddingVertical="11dp"
                android:paddingHorizontal="43dp"
                android:layout_marginEnd="13dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/renwnr5pl2c"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Акции" />
        </LinearLayout>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="io.github.krezerenko.sem4_pizzeria.MenuItemFragment"/>

</LinearLayout>