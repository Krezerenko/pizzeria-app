<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="94dp"
        android:layout_height="48dp">
    <Button
            android:id="@+id/button_button_modify_not_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать" />
    <LinearLayout
            android:id="@+id/button_button_modify_selected"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/circle_outline_primary"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/text_button_modify_plus"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textAppearance="@style/textBodyMedium"
                android:textColor="@color/primary"
                android:text="+"
                />
        <TextView
                android:id="@+id/text_button_modify_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/textBodyMedium"
                android:textColor="@color/primary"
                android:text="1"
                />
        <TextView
                android:id="@+id/text_button_modify_minus"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:textAppearance="@style/textBodyMedium"
                android:textColor="@color/primary"
                android:text="-"
                />
    </LinearLayout>

</ViewSwitcher>
